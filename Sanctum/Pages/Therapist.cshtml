    var theRapist = "/images/ppl/rei.png";
    var firstTheRapist = "/images/therapist/firstrapist.png";
    var secondTheRapist = "/images/therapist/secondrapist.png";
    var thirdTheRapist = "/images/therapist/firstrapist.png";
    var fourthTheRapist = "/images/therapist/firstrapist.png";

    var therapists = new[]
          {
        new { Name = "Prof. Junnevy Millora", Image = firstTheRapist, Profession = "Clinical Psychologist", Experience = "2 Years", Country = "Philippines", Description = "As a psychologist who is passionate about my purpose, I am dedicated to assisting individuals seeking healing to achieve balanced well-being. I engage with my clients fully, bringing empathy and a profound understanding of their unique stories and challenges." },
        new { Name = "Jerryl Lofamia", Image = secondTheRapist, Profession = "Counselor", Experience = "5 Years", Country = "Philippines", Description = "Hello. I am Ms. Jerryl. I am a Registered Guidance Counselor. I look forward to meeting you and hopefully we can journey together for better days. I'm passionate with reading and learning new things. I feel happy when my clients also share their passion and goals with me. I love watching historical Korean dramas and I enjoy pop rock music most of the times." },
        new { Name = "Jesicar Canlas", Image = thirdTheRapist, Profession = "Counselor", Experience = "6 Years", Country = "Philippines", Description = "As a Registered Guidance Counselor with a Bachelor’s degree in Psychology from the University of Santo Tomas and a Master of Arts in Education, specializing in Guidance and Counseling from FEU Roosevelt Cainta, I bring 14 years of dedicated experience to my practice. My passion lies in nurturing the well- being and personal growth of individuals across all stages of life." }

